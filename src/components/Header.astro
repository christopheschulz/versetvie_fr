---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { languages } from '../i18n/ui';
import LanguageSwitcher from './LanguageSwitcher.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="fixed top-0 left-0 right-0 z-50 glass border-b border-[var(--color-border)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={`/${lang}/`} class="flex items-center gap-2">
        <img src="/icon.png" alt="VersetVie" class="w-10 h-10 rounded-xl" />
        <span class="font-semibold text-lg hidden sm:block">VersetVie</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-1">
        <a href={`/${lang}/`} data-section="hero" class="nav-link">
          {t('nav.home')}
        </a>
        <a href={`/${lang}/#screenshots`} data-section="screenshots" class="nav-link">
          {t('nav.screenshots')}
        </a>
        <a href={`/${lang}/#features`} data-section="features" class="nav-link">
          {t('nav.features')}
        </a>
        <a href={`/${lang}/#testimonials`} data-section="testimonials" class="nav-link">
          {t('nav.testimonials')}
        </a>
        <a href={`/${lang}/#pricing`} data-section="pricing" class="nav-link">
          {t('nav.support')}
        </a>
        <a href={`/${lang}/#faq`} data-section="faq" class="nav-link">
          {t('nav.faq')}
        </a>
        <a href={`/${lang}/#download`} data-section="download" class="nav-link">
          {t('nav.download')}
        </a>
        <a href={lang === 'de' ? `/${lang}/kontakt` : `/${lang}/contact`} class="nav-link">
          {t('nav.contact')}
        </a>
      </nav>

      <!-- Actions -->
      <div class="flex items-center gap-4">
        <LanguageSwitcher />

        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="p-2 rounded-lg hover:bg-[var(--color-surface)] transition-colors cursor-pointer"
          aria-label="Toggle theme"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"/>
          </svg>
          <svg class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
          </svg>
        </button>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg hover:bg-[var(--color-surface)] transition-colors"
          aria-label="Menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="hidden md:hidden border-t border-[var(--color-border)] bg-[var(--color-surface)]">
    <div class="px-4 py-4 space-y-1">
      <a href={`/${lang}/`} data-section="hero" class="nav-link nav-link--mobile">
        {t('nav.home')}
      </a>
      <a href={`/${lang}/#screenshots`} data-section="screenshots" class="nav-link nav-link--mobile">
        {t('nav.screenshots')}
      </a>
      <a href={`/${lang}/#features`} data-section="features" class="nav-link nav-link--mobile">
        {t('nav.features')}
      </a>
      <a href={`/${lang}/#testimonials`} data-section="testimonials" class="nav-link nav-link--mobile">
        {t('nav.testimonials')}
      </a>
      <a href={`/${lang}/#pricing`} data-section="pricing" class="nav-link nav-link--mobile">
        {t('nav.support')}
      </a>
      <a href={`/${lang}/#faq`} data-section="faq" class="nav-link nav-link--mobile">
        {t('nav.faq')}
      </a>
      <a href={`/${lang}/#download`} data-section="download" class="nav-link nav-link--mobile">
        {t('nav.download')}
      </a>
      <a href={lang === 'de' ? `/${lang}/kontakt` : `/${lang}/contact`} class="nav-link nav-link--mobile">
        {t('nav.contact')}
      </a>
    </div>
  </nav>
</header>

<style>
  /* Desktop nav links */
  .nav-link {
    position: relative;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    transition: color 0.2s ease;
    border-radius: 0.5rem;
  }

  .nav-link:hover {
    color: var(--color-text);
    background: var(--color-surface);
  }

  /* Active indicator (underline) */
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
    transform: translateX(-50%);
    transition: width 0.25s ease;
  }

  .nav-link.active {
    color: var(--color-primary);
    font-weight: 600;
  }

  .nav-link.active::after {
    width: calc(100% - 1.5rem);
  }

  /* Mobile nav links */
  .nav-link--mobile {
    display: block;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
  }

  .nav-link--mobile::after {
    display: none;
  }

  .nav-link--mobile.active {
    background: var(--color-primary);
    color: white;
    font-weight: 600;
  }

  .nav-link--mobile:hover:not(.active) {
    background: var(--color-surface);
  }
</style>

<script>
  function initNavigation() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Active section detection
    const sections = ['hero', 'screenshots', 'features', 'testimonials', 'pricing', 'faq', 'download'];
    const navLinks = document.querySelectorAll('.nav-link');

    function setActiveLink(sectionId: string) {
      navLinks.forEach(link => {
        const linkSection = link.getAttribute('data-section');
        link.classList.toggle('active', linkSection === sectionId);
      });
    }

    // Handle click on nav links - activate immediately
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const sectionId = link.getAttribute('data-section');
        if (sectionId) {
          setActiveLink(sectionId);
        }
        // Close mobile menu
        if (mobileMenu) {
          mobileMenu.classList.add('hidden');
        }
      });
    });

    // Set initial active state based on current scroll position or hash
    const hash = window.location.hash.replace('#', '');
    if (hash && sections.includes(hash)) {
      setActiveLink(hash);
    } else {
      setActiveLink('hero');
    }

    // Intersection Observer for section detection on scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.id;
          if (sectionId) {
            setActiveLink(sectionId);
          }
        }
      });
    }, {
      root: null,
      rootMargin: '-20% 0px -60% 0px',
      threshold: 0
    });

    // Observe all sections
    sections.forEach(sectionId => {
      const element = document.getElementById(sectionId);
      if (element) {
        observer.observe(element);
      }
    });
  }

  // Run on initial load and page transitions
  document.addEventListener('astro:page-load', initNavigation);
  document.addEventListener('DOMContentLoaded', initNavigation);
</script>
