---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const features = [
  {
    title: t('features.verse.title'),
    description: t('features.verse.description'),
    icon: `<path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>`,
  },
  {
    title: t('features.encouragement.title'),
    description: t('features.encouragement.description'),
    icon: `<path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>`,
  },
  {
    title: t('features.categories.title'),
    description: t('features.categories.description'),
    icon: `<path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>`,
  },
  {
    title: t('features.stats.title'),
    description: t('features.stats.description'),
    icon: `<path d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>`,
  },
  {
    title: t('features.testimony.title'),
    description: t('features.testimony.description'),
    icon: `<path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>`,
  },
  {
    title: t('features.prayer.title'),
    description: t('features.prayer.description'),
    icon: `<path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>`,
  },
];
---

<section id="features" class="py-20 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl sm:text-4xl font-bold text-center mb-4">
      <span class="bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] bg-clip-text text-transparent">
        {t('features.title')}
      </span>
    </h2>

    <p class="text-center text-[var(--color-text-secondary)] mb-12 max-w-2xl mx-auto">
      {lang === 'fr' ? 'Tout ce dont tu as besoin pour nourrir ta foi au quotidien' :
       lang === 'en' ? 'Everything you need to nourish your faith daily' :
       'Alles, was du brauchst, um deinen Glauben täglich zu nähren'}
    </p>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature, index) => (
        <div
          class="group p-6 rounded-2xl bg-[var(--color-card)] border border-[var(--color-border)] hover:border-[var(--color-primary)]/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="w-12 h-12 mb-4 rounded-xl bg-gradient-to-br from-[var(--color-primary)]/10 to-[var(--color-secondary)]/10 flex items-center justify-center group-hover:from-[var(--color-primary)]/20 group-hover:to-[var(--color-secondary)]/20 transition-colors">
            <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <Fragment set:html={feature.icon} />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
          <p class="text-[var(--color-text-secondary)] text-sm">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
